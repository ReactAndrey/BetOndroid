<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INPLAY"
            android:textColor="#009688" />

        <TextView
            android:id="@+id/txtinplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(5 Sec)" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtbalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance:A$0.00(A$0.00)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtmdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/15/18 5:00 AM" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtmwager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wager:A$5.00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtmatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matched:A$472,196.80" />

        <TextView
            android:id="@+id/txtselvalue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Pakistan A"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtmvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A$0.00"
            android:textColor="#009688"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ListView
            android:layout_width="180dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layoutDirection="rtl"
                android:maxWidth="50dp"
                android:minHeight="80dp"
                android:text="Pakistan..."
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:maxWidth="100dp"
                android:minHeight="80dp"
                android:text="New Ze...\naaa"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray" />

        </ListView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaa" />
        </ListView>

    </LinearLayout>
</LinearLayout>